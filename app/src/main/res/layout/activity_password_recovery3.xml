<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Голубой прямоугольник за заголовком -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/lightblue"
        android:layout_alignParentTop="true"/>

    <!-- Заголовок "Вход" с кнопкой назад -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@id/headerBackground"
        android:layout_alignBottom="@id/headerBackground">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chevronleft"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            app:tint="@color/darktext" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изменение пароля"
            android:textSize="24sp"
            android:textColor="@color/darktext"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:layout_below="@id/headerBackground">

        <!-- Пароль -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/imgpassw"
            app:errorEnabled="true"
            app:endIconDrawable="@drawable/eyes1"
            app:startIconTint="@color/blue"
            app:endIconTint="@color/blue"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Придумайте пароль"
                android:inputType="textPassword"
                android:background="@drawable/backtext"
                android:paddingStart="50dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Повторите пароль -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/imgpassw"
            app:errorEnabled="true"
            app:endIconDrawable="@drawable/eyes1"
            app:startIconTint="@color/blue"
            app:endIconTint="@color/blue"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repeatPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backtext"
                android:hint="Повторите пароль"
                android:inputType="textPassword"
                android:paddingStart="50dp"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_alignParentBottom="true">

        <!-- Кнопка "Войти" -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:text="Войти"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</RelativeLayout>